{
  "name": "tops",
  "displayName": "TOPS",
  "description": "Text operations made simple.",
  "version": "1.0.2",
  "publisher": "nicoknl",
  "author": {
      "name": "NicoKNL"
  },
  "icon": "images/tops-logo.png",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:tops.tops"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "TOPS",
      "properties": {
        "tops.scriptsRoot": {
          "type": "string",
          "description": "The root folder in which operations are stored"
        }
      }
    },
    "commands": [
      {
        "command": "tops.tops",
        "title": "Run TOPS"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^16.11.4",
    "@types/vscode": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "repository": {
      "type": "git",
      "url": "https://github.com/nicoknl/tops.git"
  }
}
